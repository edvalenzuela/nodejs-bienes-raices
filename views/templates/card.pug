div(class="bg-white shadow rounded-lg")
  img(class="object-cover h-72 w-full" src=`/uploads/${item.imagen}` alt=`imagen casa ${item.titulo}`)
  div(class="p-5 space-y-5")
    h3(class="text-2xl font-bold")= item.titulo 
    p(class="text-sm text-gray-600") Habitaciones:
      span(class="text-gray-800 font-bold")= item.habitaciones
    p(class="text-sm text-gray-600") WC:
      span(class="text-gray-800 font-bold")= item.wc
    p(class="text-sm text-gray-600") Precio:
      span(class="text-gray-800 font-bold")= item.precio.nombre
    a(href=`/propiedad/${item.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver propiedad